docker run -i -t --rm ubuntu /bin/bash  # контейнер будет существовать только во время сеанса 
docker run --name daemon_1 -d ubuntu /bin/sh -c "while true; do echo hello world; sleep 1; done # продолжит существовать после завершения сеансу
docker logs -f daemon_1
docker stop daemon_1 
docker ps -a 
docker start daemon_1 
docker ps -a 
docker rm daemon_1
docker rm -f $(docker ps -aq)
docker commit -m "What you did to the image" -a "Author Name" container_id repository/new_image_name
docker commit -m "added Node.js" -a "sammy" d9b100f2f636 sammy/ubuntu-nodejs
docker login -u docker-registry-username
docker push docker-registry-username/docker-image-name
docker push sammy/ubuntu-nodejs
