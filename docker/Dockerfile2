FROM python:3.6
ADD ./django-ckeditor /project
ENV DJANGO_SETTINGS_MODULE ckeditor_demo.settings
RUN pip install -r /project/requirements.txt 
RUN pip install /project
RUN python /project/manage.py check 
RUN python /project/manage.py collectstatic --noinput 
CMD python /project/manage.py runserver 0.0.0.0:8000 



