uwsgi 
    --ini project_uwsgi.ini
sudo mkdir /etc/uwsgi/vassals
sudo ln -s /path/to/your/mysite/project_uwsgi.ini /etc/uwsgi/vassals/
sudo uwsgi 
    --emperor /etc/uwsgi/vassals 
    --uid www-data 
    --gid www-data



