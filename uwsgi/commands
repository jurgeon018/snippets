

nano ~/test.py 
def application(env, start_response):
    start_response('200 OK', [('Content-Type','text/html')])
    return [b"Hello World"] # python3
    #return ["Hello World"] # python2
uwsgi 
    --http :8000 
    --wsgi-file test.py
uwsgi 
    --http :8000 
    --module mysite.wsgi
uwsgi 
    --http :8000
    --home VENV_DIR 
    --chdir BASE_DIR 
    -w project.wsgi  # or 
   #-- wsgi-file BASE_DIR/project_root/wsgi.py
uwsgi 
    --socket :8001 
    --wsgi-file test.py
uwsgi 
    --socket project.sock 
    --wsgi-file test.py
uwsgi 
    --socket project.sock 
    --module project.wsgi 
    --chmod-socket=664
uwsgi 
    --ini project_uwsgi.ini
sudo mkdir /etc/uwsgi/vassals
sudo ln -s /path/to/your/mysite/project_uwsgi.ini /etc/uwsgi/vassals/
sudo uwsgi 
    --emperor /etc/uwsgi/vassals 
    --uid www-data 
    --gid www-data


sudo usermod -a -G jurgeon www-data

sudo ufw allow 'Nginx Full'
sudo nginx -t

sudo systemctl enable nginx
sudo systemctl enable uwsgi
sudo systemctl start nginx
sudo systemctl restart nginx
sudo systemctl start uwsgi
sudo systemctl restart uwsgi
sudo systemctl daemon-reload

sudo reboot
# https://askubuntu.com/questions/903354/difference-between-systemctl-and-service-commands
