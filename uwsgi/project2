# upstream django {
#     # server unix:///path/to/your/mysite/mysite.sock; # взаимодействие с uwsgi через Unix-сокет (мы воспользуемся этим вариантом позже) 
#     # server 127.0.0.1:8001;                          # взаимодействие с uwsgi через веб-порт 
#     server unix:///path/to/your/mysite/mysite.sock; 
# }

server {
    listen 80;
    server_name margo.mendela.xyz;
    charset utf-8;
    client_max_body_size 75M;
    location = /favicon.ico { access_log off; log_not_found off;}
    location /media {
        alias /home/jurgeon/django_projects/project2/media; 
    }
    location /static/ {
        alias /home/jurgeon/django_projects/project2/static;
    }
    location / {
        uwsgi_pass   unix:/home/jurgeon/django_projects/sites/project2.sock;
        #uwsgi_pass  django 
        include      /etc/nginx/uwsgi_params;
    }
}
