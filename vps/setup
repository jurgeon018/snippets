    `
adduser jurgeon # or usermod -aG sudo jurgeon
adduser jurgeon sudo
sudo apt-get install uwsgi apache nginx gunicorn \
                    postgresql-11 ufw python3-dev python3-pip \
                    python3-venv python3-setuptools apache2 \
                    libapache2-mod-wsgi-py3  virtualenv \ 
                    virtualenvwrapper
sudo -H pip3 install --upgrade pip
sudo -H pip3 install virtualenv virtualenvwrapper uwsgi 
ufw app list
sudo ufw default allow outgoing
sudo ufw default deny incoming
sudo ufw status 
#sudo ufw disable 
sudo ufw allow OpenSSH
sudo ufw allow ssh
sudo ufw allow 8000
sudo ufw allow http
sudo ufw allow https
sudo ufw enable
